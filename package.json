{
  "name": "character-api",
  "version": "1.0.0",
  "description": "Character & Conversation Management API",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "studio": "npx prisma studio",
    "db:pull": "npx prisma db pull",
    "db:generate": "npx prisma generate",
    "db:reset": "./setup-schema.sh && npx prisma generate",
    "db:backup": "node scripts/backup-database.js backup",
    "db:backup:json": "node scripts/backup-database.js json",
    "db:restore": "node scripts/backup-database.js restore",
    "db:list": "node scripts/backup-database.js list",
    "models:populate": "node scripts/populate-models.js"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "joi": "^17.11.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "prisma": "^6.13.0",
    "prisma-erd-generator": "^2.0.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
